@model LibraryManagementUI.Models.Book

@{
    ViewBag.Title = "Create";
}

<h2>Create New Book</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SerialNumber)
        @Html.EditorFor(model => model.SerialNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SerialNumber, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Author)
        @Html.EditorFor(model => model.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Publisher)
        @Html.EditorFor(model => model.Publisher, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Save" /> |
        @Html.ActionLink("Back to Books", "Index", "Books")
    </div>
}

